<div id="clock"></div>

<script>
    $(document).ready(function() {
        setInterval(function() {
            $("#clock").html(new Date().toLocaleTimeString());
        }, 1000);
    });
</script>

<h1>Timeclock</h1>

<%= form_tag '/timeclock/punch_in', id: 'timeclock-form' do %>
  <div>
    <%#= label_tag 'Worker ID' %>
    <%#= text_field_tag 'worker_id' %>
    <%= select_tag 'worker_id', options_for_select(Worker.all.pluck(:id)), prompt: "- Please Select Your ID -" %>
  </div>
  <div>
    <%= submit_tag (@worker.present? && @worker.status_active ? 'Punch Out' : 'Punch In') %>
  </div>
<% end %>
